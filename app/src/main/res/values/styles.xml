<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="spacex_toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/toolbar_background</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="spacex_toolbar_inverted" parent="@style/spacex_toolbar">
        <item name="android:background">@color/toolbar_background_inverted</item>
    </style>

    <style name="spacex_toolbar_title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="spacex_toolbar_title_inverted" parent="@style/spacex_toolbar_title">
        <item name="android:textColor">@color/content_text_inverted</item>
    </style>

    <style name="spacex_content_title_divider" parent="@style/TextAppearance.AppCompat.Medium">

        <item name="android:gravity">start</item>
        <item name="android:background">@color/content_divider_background</item>
        <item name="android:textColor">@color/content_divider_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <style name="spacex_text_body">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:textColor">@color/content_text</item>
    </style>

    <style name="spacex_text_body_inverted">
        <item name="android:textColor">@color/content_text_inverted</item>
    </style>

    <style name="spacex_text_item">
        <item name="android:textColor">@color/content_text</item>
        <item name="android:gravity">start</item>
    </style>


</resources>